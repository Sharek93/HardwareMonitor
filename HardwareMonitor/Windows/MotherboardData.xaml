<Window x:Name="MotherboardDataWindow" x:Class="HardwareMonitor.Windows.MotherboardData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardwareMonitor.Windows"
        mc:Ignorable="d"
        Title="MotherboardData" Height="450" Width="370" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Background="#7F000000" Deactivated="MotherboardDataWindow_Deactivated">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="TopGrid" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Motherboard:" Margin="5,0,0,0" FontFamily="Calibri" FontWeight="Bold" Foreground="White" Padding="0" VerticalContentAlignment="Center"/>
            <Label Name="MotherboardName" Content="No data" Margin="0" FontFamily="Calibri" Foreground="White" FontStretch="Condensed" FontWeight="Thin" Padding="0" VerticalContentAlignment="Center" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
